# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api

# WebSocket Configuration
# WebSocket URL for real-time features (chat, notifications)
VITE_WS_BASE_URL=ws://localhost:8000/ws

# Token Configuration
# Number of seconds before token expiration to trigger refresh (default: 30)
VITE_TOKEN_REFRESH_BUFFER=30

# Storage Configuration
# Set to 'true' to use sessionStorage instead of localStorage for tokens
# sessionStorage is more secure as it clears when browser closes
VITE_USE_SESSION_STORAGE=true
